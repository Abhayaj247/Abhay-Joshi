<div class="banner-section">
  <div class="banner-container">
    <div class="banner-content">
      <h1 class="banner-heading">{{ section.settings.heading }}</h1>
      <p class="banner-subtext">{{ section.settings.subtext }}</p>
      <div class="banner-buttons">
        <button class="banner-button primary">{{ section.settings.button1_text }}</button>
        <button class="banner-button secondary">{{ section.settings.button2_text }}</button>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Custom Banner",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Welcome to Our Store"
    },
    {
      "type": "text",
      "id": "subtext",
      "label": "Subtext",
      "default": "Discover our latest collection"
    },
    {
      "type": "text",
      "id": "button1_text",
      "label": "Primary Button Text",
      "default": "Shop Now"
    },
    {
      "type": "text",
      "id": "button2_text",
      "label": "Secondary Button Text",
      "default": "Learn More"
    }
  ],
  "presets": [
    {
      "name": "Custom Banner"
    }
  ]
}
{% endschema %}

