<div class="banner-section">
  <div class="banner-header">
    <div class="header-left">
      <h1 class="logo">{{ section.settings.logo_text }}</h1>
    </div>
    <div class="header-center">
      <p class="tagline">{{ section.settings.tagline_text }}</p>
    </div>
    <div class="header-right">
      <button class="choose-gift-btn">
        {{ section.settings.cta_button_text }}
        <span class="arrow">→</span>
      </button>
    </div>
  </div>

  <div class="banner-content">
    <h2 class="gift-guide-title">{{ section.settings.main_heading }}</h2>
    <div class="gift-guide-description">
      <p>{{ section.settings.description_text }}</p>
    </div>
    <div class="shop-now-container">
      <a href="{{ section.settings.button_link }}" class="shop-now-btn">
        {{ section.settings.button_text }}
        <span class="arrow">→</span>
      </a>
    </div>
  </div>

  <div class="banner-footer">
    <p class="sustainability-text">{{ section.settings.footer_text }}</p>
  </div>

  <div class="illustration-grid">
    <!-- SVG illustrations here -->
  </div>
</div>

{% schema %}
{
  "name": "Gift Guide Banner",
  "settings": [
    {
      "type": "text",
      "id": "logo_text",
      "label": "Logo Text",
      "default": "TISSO VISON"
    },
    {
      "type": "text",
      "id": "tagline_text",
      "label": "Tagline Text",
      "default": "Find the ideal gift for your loved ones."
    },
    {
      "type": "text",
      "id": "cta_button_text",
      "label": "Choose Gift Button Text",
      "default": "CHOOSE GIFT"
    },
    {
      "type": "text",
      "id": "main_heading",
      "label": "Main Heading",
      "default": "The Gift Guide"
    },
    {
      "type": "textarea",
      "id": "description_text",
      "label": "Description Text",
      "default": "Discover Joy: Your Ultimate Holiday Gift Destination. Explore our curated selection and find the perfect gifts to delight your loved ones this holiday season."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Shop Now Button Text",
      "default": "SHOP NOW"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Shop Now Button Link"
    },
    {
      "type": "text",
      "id": "footer_text",
      "label": "Footer Text",
      "default": "SUSTAINABLE, ETHICALLY MADE CLOTHES"
    }
  ],
  "presets": [
    {
      "name": "Gift Guide Banner",
      "category": "Custom Sections"
    }
  ]
}
{% endschema %}

