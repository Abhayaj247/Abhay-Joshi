<div class="banner-section">
  <div class="banner-container">
    <!-- Header -->
    <header class="banner-header">
      <button class="mobile-menu-button" type="button">
        <span class="menu-icon"></span>
      </button>
      <h2 class="banner-logo">
        {{ section.settings.logo }}
      </h2>
      <div class="mobile-menu">
        <nav class="mobile-nav">
          <ul>
            <li><a href="/collections/all">Shop All</a></li>
            <li><a href="/collections/new">New Arrivals</a></li>
            <li><a href="/pages/about">About</a></li>
            <li><a href="/pages/contact">Contact</a></li>
          </ul>
        </nav>
      </div>
    </header>
    <!-- Main content -->
    <div class="banner-content">
      <h1 class="banner-title">
        {{ section.settings.heading }}
      </h1>
      <p class="banner-description">
        {{ section.settings.subheading }}
      </p>
      <!-- Illustration Area -->
      <div class="banner-illustration">
        <div class="illustration-grid">
          <!-- SVG illustrations -->
          <div class="illustration-item camera">
            <img
              src="{{ 'icon-camera.svg' | asset_url }}"
              alt="Camera icon"
              width="437"
              height="294" />
          </div>
          <div class="illustration-item lens">
            <img
              src="{{ 'icon-lens.svg' | asset_url }}"
              alt="Camera icon"
              width="437"
              height="294" />
          </div>
          <div class="illustration-item compass">
            <img
              src="{{ 'icon-compass.svg' | asset_url }}"
              alt="Camera icon"
              width="437"
              height="294" />
          </div>
          <div class="illustration-item notebook">
            <img
              src="{{ 'icon-notebook.svg' | asset_url }}"
              alt="Camera icon"
              width="437"
              height="294" />
          </div>
        </div>
      </div>
      <!-- CTA button -->
      <div class="banner-cta">
        <a href="{{section.settings.button_link}}" class="shop-now-button animated-button">
          {{ section.settings.button_text }}
          <img
            src="{{ 'icon-arrow.svg' | asset_url }}"
            alt="Camera icon"
            width="437"
            height="294" />
        </a>
      </div>
      <!-- Footer Text -->
      <p class="banner-footer">
        {{ section.settings.footer_text }}
      </p>
    </div>
  </div>
</div>
{% schema %}
  {
    "name": "Gift Guide Banner",
    "settings": [
      {
        "type": "text",
        "id": "logo",
        "label": "Logo Text",
        "default": "TISSO VISSION"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "The Gift Guide"
      },
      {
        "type": "text",
        "id": "subheading",
        "label": "Subheading",
        "default": "Discover Joy: Your Ultimate Holiday Gift Destination."
      },
      {
        "type": "url",
        "id": "button_link",
        "label": "Button Link"
      },
      {
        "type": "text",
        "id": "footer_text",
        "label": "Footer Text",
        "default": "SUSTAINABLE, ETHICALLY MADE ACTIVEWEAR"
      }
    ],
    "presets": [
      {
        "name": "Gift Guide Banner"
      }
    ]
  }
{% endschema %}

